<div class="top-bar">
  <div class="top-bar-left">
    <ul class="vertical medium-horizontal menu">
      <li class="menu-text">art.</li>
      <li><a href="/">Home</a></li>
      <li><a href="/paintings">Paintings</a></li>
      <li><a href="/artists">Artists</a></li>
      <li><a href="/favorites">Favourites</a></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if (!currentUser) { %>
        <li><button class="button" data-open="loginSignupModal">Login / Signup</button></li>
      <% } else { %>
        <li><a href="/auth/logout">Logout</a></li>
      <% } %>
    </ul>
  </div>
</div>

<!-- This is the first modal -->
<div class="reveal" id="loginSignupModal" data-reveal>
  <form action="/auth/login" method="POST">
    <label for="auth-email">Email</label>
    <input id="auth-email" type="email" name="email">
  
    <label for="auth-password">Password</label>
    <input id="auth-password" type="password" name="password">
  
    <input type="submit" value="Log In!">
  </form>
  <button class="button" data-open="signupModal">Sign Up!</button>
  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<!-- This is the nested modal -->
<div class="reveal" id="signupModal" data-reveal>
  <form action="/auth/signup" method="POST">
    <label for="new-email">Email</label>
    <input id="new-email" type="email" name="email">
  
    <label for="new-name">Name</label>
    <input id="new-name" type="text" name="name">
  
    <label for="new-password">Password</label>
    <input id="new-password" type="password" name="password">
  
    <input type="submit" value="Sign Up!">
  </form>
  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>