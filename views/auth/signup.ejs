<div class="grid-container">
  
  <div class="media-object align-center">
    <div class="media-object-section">
      <img src= "/assets/goya-saturna.jpg" alt="Saturn Devouring One of His Sons (de Goya)">
    </div>
    <div class="media-object-section">
      <form action="/auth/signup" method="POST">
        <div class="grid-y grid-padding-y">
          <div class="cell small-6">
            <label for="new-name">Name</label>
            <input id="new-name" type="text" name="name">
          </div>
          <div class="cell small-6">
            <label for="new-email">E-mail</label>
            <input id="new-email" type="email" name="email">
          </div>
          <div class="cell small-6">
            <label for="new-password">Password</label>
            <input id="new-password" type="password" aria-describedby="passwordHelpText" name="password">
            <p class="help-text" id="passwordHelpText">Your password must have at least 8 and up to 99 characters.</p>
          </div>      
          <div class="cell">
            <input type="submit" class="button success" value="Sign up">
          </div>
        </div>
      </form>
    </div>
  </div>


  <div class="reveal" id="exampleModal1" data-reveal>
    <h1>Awesome. I Have It.</h1>
    <p class="lead">Your couch. It is mine.</p>
    <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
